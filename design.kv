<MyGridLayout>
    name:name
    pizza:pizza
    colour:colour
    
    # Main grid
    GridLayout:
        cols:1
        size: root.width, root.height

        # Top Grid
        GridLayout:
            cols:2

            Label:
                text: "Name"
            TextInput:
                id: name
                multiline: False
            
            Label:
                text: "Favourite pizza"
            TextInput:
                id: pizza
                multiline: False

            Label:
                text: "Favourite colour"
            TextInput:
                id: colour
                multiline: False

        Button:
            text: "Submit"
            font_size:32
            on_press: root.press()
            background_normal: ''
            background_color: '#EEFA00'
